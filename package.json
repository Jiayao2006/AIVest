{
  "name": "aivest-banking-app",
  "version": "1.0.0",
  "description": "AIVest - Banking Client Management System for Relationship Managers",
  "main": "backend/app.py",
  "type": "module",
  "engines": {
    "python": ">=3.8.0",
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "install:frontend": "npm install --prefix ./frontend --include=dev",
    "install:backend": "pip install -r backend/requirements.txt", 
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:deps": "echo 'Installing dependencies from requirements.txt' && npm run install:all",
    "build:frontend": "npm run build --prefix ./frontend",
    "build": "npm run install:deps && npm run build:frontend",
    "start": "python backend/app.py",
    "dev:frontend": "npm run dev --prefix ./frontend",
    "dev:backend": "python backend/app.py",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "keywords": [
    "banking",
    "client-management",
    "relationship-manager",
    "react",
    "flask",
    "python",
    "high-net-worth",
    "portfolio-management"
  ],
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jiayao2006/AIVest.git"
  }
}
